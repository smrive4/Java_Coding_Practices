public class NumberChecker {
   
    // Method that checks if a number is even and provides feedback
    public static String checkEven(int number) {
        if (number % 2 == 0) {
            return "The number " + number + " is even.";
        } else {
            return "The number " + number + " is odd.";
        }
    }

    public static void main(String[] args) {
        int num = 7; 
        String result = checkEven(num); 
        System.out.println(result); // Provide feedback to the user
    }
}
